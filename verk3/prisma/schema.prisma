generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model teams {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  slug        String   @unique
  description String?
  homeTeam    games[]  @relation("homeTeam")
  awayTeam    games[]  @relation("awayTeam")
}

model games {
  id         Int      @id @default(autoincrement())
  date       DateTime
  home       Int
  away       Int
  homeScore  Int
  awayScore  Int
  homeTeam   teams    @relation("homeTeam", fields: [home], references: [id])
  awayTeam   teams    @relation("awayTeam", fields: [away], references: [id])
}