generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model teams {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  slug        String   @unique
  description String?
  home_team   games[]  @relation("home_team")
  away_team   games[]  @relation("away_team")
  
}

model games {
  id         Int      @id @default(autoincrement())
  date       DateTime
  home       Int
  away       Int
  homeScore  Int      @map("home_score")
  awayScore  Int      @map("away_score")
  home_team  teams    @relation("home_team", fields: [home], references: [id], onDelete: Cascade)
  away_team  teams    @relation("away_team", fields: [away], references: [id], onDelete: Cascade)
}